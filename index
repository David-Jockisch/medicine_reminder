<div>
    <h2>Jessee</h2>  
    <button class="day-button" onclick="toggleColor(this)">Sunday</button>
    <button class="day-button" onclick="toggleColor(this)">Monday</button>
    <button class="day-button" onclick="toggleColor(this)">Tuesday</button>
    <button class="day-button" onclick="toggleColor(this)">Wednesday</button>
    <button class="day-button" onclick="toggleColor(this)">Thursday</button>
    <button class="day-button" onclick="toggleColor(this)">Friday</button>
    <button class="day-button" onclick="toggleColor(this)">Saturday</button>
    <button class="reset-button" onclick="resetColors()">Reset</button>

</div>



<script>
  function toggleColor(button) {
    button.style.backgroundColor = button.style.backgroundColor === 'white' ? 'green' : 'white';
  }

  function resetColors() {
    var buttons = document.querySelectorAll('.day-button');
    buttons.forEach(function(button) {
      button.style.backgroundColor = 'white';
    });
  }
</script>

